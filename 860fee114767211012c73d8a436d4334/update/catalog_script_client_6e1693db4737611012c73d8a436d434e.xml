        <name>Validate the Date to Return</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    var dateToReturn = g_form.getValue('date_to_return_the_vehicle'); 
    var dateNeeded = g_form.getValue('date_needed'); 

    if (dateToReturn && dateNeeded) { 
        var dtReturn = new Date(dateToReturn);
        var dtNeeded = new Date(dateNeeded);

        if (dtReturn.getTime() < dtNeeded.getTime()) { // Date to return is before Date needed
            g_form.clearValue('date_to_return_the_vehicle'); // Clear 'Date to return'
            g_form.showFieldMsg('date_to_return_the_vehicle', "Date to Return should not be before the Date Needed", 'error'); // Show error message
        }
    }
}
]]></script>
